{
  "name": "vault-protocol",
  "version": "1.0.0",
  "description": "VAULT Protocol - Blockchain-based Protocol for secure file sharing and storage",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:encrypted": "cross-env FILE_ENCRYPTION_KEY=9c69b7c1996a8cbb37bd218fc147a0e275444aeb83dc30d8d2992a42321395f6 nodemon server.js",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js --network quorum",
    "test": "hardhat test",
    "setup-quorum": "npx quorum-dev-quickstart --clientType besu --outputPath ./quorum-test-network --monitoring default --privacy true",
    "start-quorum": "cd quorum-test-network && ./run.sh",
    "stop-quorum": "cd quorum-test-network && ./stop.sh",
    "check-status": "node scripts/check-status.js"
  },
  "keywords": [
    "blockchain",
    "quorum",
    "certificate",
    "ipfs",
    "vault",
    "express"
  ],
  "author": "Sarthak Priyadarshi",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "web3": "^1.10.0",
    "web3js-quorum": "^22.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.3.10",
    "cross-env": "^10.1.0",
    "ethers": "^6.15.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.10",
    "mocha": "^10.2.0",
    "nodemon": "^3.1.10",
    "solidity-coverage": "^0.8.16",
    "tailwindcss": "^4.1.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3"
  }
}
